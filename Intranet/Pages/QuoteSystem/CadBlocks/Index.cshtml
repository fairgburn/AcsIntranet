@model Intranet.Pages.QuoteSystem.CadBlocks.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].BlockName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].PartNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].Qflag)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].SpecNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].InsertionPoint)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlockModel[0].Creator)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BlockModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlockName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qflag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertionPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
