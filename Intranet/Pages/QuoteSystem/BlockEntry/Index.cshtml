@page
@model Intranet.Pages.QuoteSystem.BlockEntry.IndexModel

@{
    ViewData["Title"] = "Quotation System - Block Entry";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Block Entry</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Block[0].PartNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Block[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Block[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Block[0].Qflag)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Block[0].Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Block[0].SpecNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Block[0].InsertionPoint)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Block) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qflag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertionPoint)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BlockName">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BlockName">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BlockName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
